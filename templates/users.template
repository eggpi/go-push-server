<html>

<style type="text/css">
#sidebar {
  border: 1px solid;
  background: #C4C4C4;
}
#sidebar dl {
  margin: 0;
  padding: 0;
  border-bottom: 1px;
}
#sidebar dt {
  font-size: 22;
  font-weight: bold;
  margin: 10;
}
#sidebar dd {
  margin: 0;
  padding: 10px 10px 10px 40px;
  background: #E0E0E0;
  border-top: 1px solid;
}

</style>

<script>

navigator.mozSetMessageHandler('push', function(message) {
  alert(message);
}
);

function requestPush() {
  var req = navigator.push.register();

  req.onsuccess = function(e) {
    alert(e.target.result);
  }

  req.onerror = function(e) {
   alert("Error: " + JSON.stringify(e));
  }
}

function unregister(id) {
  var pushEndpoint = "{{.PushEndpointPrefix}}" + id;

  var req = navigator.push.unregister(pushEndpoint);

  req.onsuccess = function(e) {
    alert("unregistered successful = " + id);
  }

  req.onerror = function(e) {
    alert("unregistered failed = " + id);
  }
}

function sendNotification(id, currentVersion) {

  var request = new XMLHttpRequest();

  request.onload = function(e) {
    alert(pushEndpoint + "Updated!");
  };

  request.onerror = function(e) {
    alert(pushEndpoint + "Error Updating!");
  };

  var pushEndpoint = "{{.PushEndpointPrefix}}" + id;

  request.open("PUT", pushEndpoint, true);
  request.setRequestHeader('Content-type','application/x-www-form-urlencoded');
  request.send("version=" + Number(new Date()));
}
</script>

<body>

<Title>Admin</Title>

<h1>Users</h1>

<div id="sidebar">
{{with .Users}}
  {{range .}}
    <dl>
      <dt>
      {{.UAID}} (Connected: {{.Connected}})
      </dt>
      {{with .Channels}}
        {{range .}}
            <dd>
              <button type="button" onClick="unregister('{{.ChannelID}}')">Unregister</button>
              <button type="button" onClick="sendNotification('{{.ChannelID}}', '{{.Version}}')">Update</button>
              {{.ChannelID}}  (Version: {{.Version}})
            </dd>
          {{end}}
        {{end}}
        </dl>
  {{end}}
{{end}}
</div>

<h1>UA</h1>
<button type="button" id="button" onClick="requestPush();">Request push</button>

<h1>Memory</h1>
<p> Memory used: {{.TotalMemory}} </p>
</body>
</html>
